<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2"
    android:elevation="20dp"
    android:padding="22dp" >

    <TextView
        android:id="@+id/tvExpresstion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/rusltsTv"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.886" />

    <TextView
        android:id="@+id/rusltsTv"
        android:textColor="@color/black"
        android:textAlignment="textEnd"
        android:textSize="40sp"
        android:maxLines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        style="@style/buttonRow">
        <soup.neumorphism.NeumorphButton
            android:id="@+id/seven"
            style="@style/buttonNumber"
            app:neumorph_backgroundColor="@color/white"
            app:neumorph_lightSource="leftTop"
            android:text="7" />
        <soup.neumorphism.NeumorphButton
            android:id="@+id/eight"
            style="@style/buttonNumber"
            app:neumorph_backgroundColor="@color/white"
            app:neumorph_lightSource="leftTop"
            android:text="8" />
        <soup.neumorphism.NeumorphButton
            android:id="@+id/nine"
            style="@style/buttonNumber"
            app:neumorph_backgroundColor="@color/white"
            app:neumorph_lightSource="leftTop"
            android:text="9" />
        <soup.neumorphism.NeumorphButton
            android:id="@+id/add"
            style="@style/buttonoperastion"
            app:neumorph_backgroundColor="#000000"
            app:neumorph_lightSource="leftTop"
            android:text="+" />

    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">
        <soup.neumorphism.NeumorphButton
            android:id="@+id/four"
            style="@style/buttonNumber"
            app:neumorph_backgroundColor="@color/white"
            app:neumorph_lightSource="leftTop"
            android:text="4" />
        <soup.neumorphism.NeumorphButton
            android:id="@+id/five"
            style="@style/buttonNumber"
            app:neumorph_backgroundColor="@color/white"
            app:neumorph_lightSource="leftTop"
            android:text="5" />
        <soup.neumorphism.NeumorphButton
            android:id="@+id/six"
            style="@style/buttonNumber"
            app:neumorph_backgroundColor="@color/white"
            app:neumorph_lightSource="leftTop"
            android:text="6" />
        <soup.neumorphism.NeumorphButton
            android:id="@+id/sub"
            style="@style/buttonoperastion"
            app:neumorph_backgroundColor="#000000"
            app:neumorph_lightSource="leftTop"
            android:text="-" />

    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">
        <soup.neumorphism.NeumorphButton
            android:id="@+id/one"
            style="@style/buttonNumber"
            app:neumorph_backgroundColor="@color/white"
            app:neumorph_lightSource="leftTop"
            android:text="1" />
        <soup.neumorphism.NeumorphButton
            android:id="@+id/two"
            style="@style/buttonNumber"
            app:neumorph_backgroundColor="@color/white"
            app:neumorph_lightSource="leftTop"
            android:text="2" />
        <soup.neumorphism.NeumorphButton
            android:id="@+id/three"
            style="@style/buttonNumber"
            app:neumorph_backgroundColor="@color/white"
            app:neumorph_lightSource="leftTop"
            android:text="3" />
        <soup.neumorphism.NeumorphButton
            android:id="@+id/mult"
            style="@style/buttonoperastion"
            app:neumorph_backgroundColor="#000000"
            app:neumorph_lightSource="leftTop"
            android:text="*" />

    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">
        <soup.neumorphism.NeumorphButton
            android:id="@+id/clear"
            style="@style/buttonNumber"
            app:neumorph_backgroundColor="#FF4747"
            android:onClick="allClearAction"
            android:text="C" />

        <soup.neumorphism.NeumorphButton
            android:id="@+id/zero"
            style="@style/buttonNumber"
            app:neumorph_backgroundColor="@color/white"
            app:neumorph_lightSource="leftTop"
            android:text="0" />

        <soup.neumorphism.NeumorphButton
            android:id="@+id/equal"
            style="@style/buttonE"
            app:neumorph_backgroundColor="#000000"
            app:neumorph_lightSource="leftTop"
            android:text="=" />
        <soup.neumorphism.NeumorphButton
            android:id="@+id/divison"
            style="@style/buttonoperastion"
            app:neumorph_backgroundColor="#000000"
            app:neumorph_lightSource="leftTop"
            android:text="/" />

    </LinearLayout>

</LinearLayout>